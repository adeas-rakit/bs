generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  email       String   @unique
  password    String
  name        String
  phone       String?
  role        UserRole @default(NASABAH)
  status      UserStatus @default(AKTIF)
  qrCode      String?   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  unit        Unit?    @relation(fields: [unitId], references: [id])
  unitId      String?
  nasabah     Nasabah?
  transactions Transaction[]

  @@map("users")
}

model Unit {
  id          String   @id @default(cuid())
  name        String
  address     String
  phone       String
  status      UnitStatus @default(AKTIF)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  users       User[]
  transactions Transaction[]

  @@map("units")
}

model Nasabah {
  id          String   @id @default(cuid())
  userId      String   @unique
  accountNo   String   @unique
  balance     Int      @default(0)
  totalWeight Float    @default(0)
  depositCount Int     @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user        User     @relation(fields: [userId], references: [id])
  transactions Transaction[]

  @@map("nasabah")
}

model WasteType {
  id          String   @id @default(cuid())
  name        String
  pricePerKg  Int
  status      WasteStatus @default(AKTIF)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  transactionItems TransactionItem[]

  @@map("waste_types")
}

model Transaction {
  id            String           @id @default(cuid())
  transactionNo String           @unique
  nasabahId     String
  unitId        String
  type          TransactionType
  totalAmount   Int
  totalWeight   Float
  status        TransactionStatus @default(SUCCESS)
  notes         String?
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt

  // Relations
  nasabah       Nasabah          @relation(fields: [nasabahId], references: [id])
  unit          Unit             @relation(fields: [unitId], references: [id])
  user          User             @relation(fields: [userId], references: [id])
  userId        String
  items         TransactionItem[]

  @@map("transactions")
}

model TransactionItem {
  id            String   @id @default(cuid())
  transactionId String
  wasteTypeId   String
  weight        Float
  amount        Int
  createdAt     DateTime @default(now())

  // Relations
  transaction   Transaction @relation(fields: [transactionId], references: [id])
  wasteType     WasteType   @relation(fields: [wasteTypeId], references: [id])

  @@map("transaction_items")
}

enum UserRole {
  ADMIN
  UNIT
  NASABAH
}

enum UserStatus {
  AKTIF
  DITANGGUHKAN
}

enum UnitStatus {
  AKTIF
  DITANGGUHKAN
}

enum WasteStatus {
  AKTIF
  TIDAK_AKTIF
}

enum TransactionType {
  DEPOSIT
  WITHDRAWAL
}

enum TransactionStatus {
  PENDING
  SUCCESS
  FAILED
}